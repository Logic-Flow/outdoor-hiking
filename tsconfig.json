{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "ES6",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    // see more from: https://preactjs.com/guide/v10/typescript
    // "jsx": "preserve",
    // "jsxFactory": "h",
    // "jsxFragmentFactory": "Fragment",
    "lib": ["DOM", "DOM.Iterable", "ESNext"]

    // "baseUrl": ".",
    // "paths": {
    //   "@/*": ["*"],
    //   "@logicflow/core": ["./packages/core"]
    // }
  },
  "exclude": [
    "**/node_modules",
    "**/examples",
    "**/dist",
    "**/es",
    "**/lib",
    "**/*.test.ts",
    "**/*.e2e.ts"
  ]
}