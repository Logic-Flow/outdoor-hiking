{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2019",
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  },
  "exclude": [
    "**/node_modules",
    "**/examples",
    "**/dist",
    "**/*.test.ts",
    "**/*.e2e.ts"
  ]
}
